<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    >
    <ImageView
        android:id="@+id/imageBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/imageBackgroudTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_80"
        android:src="@drawable/backgroud_gradient_banner_home"
        app:layout_constraintBottom_toBottomOf="@+id/imageBanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageBanner"
        />
    <TextView
        android:id="@+id/textViewBannerHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/imageBackgroudTitle"
        app:layout_constraintEnd_toEndOf="@+id/imageBackgroudTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageBackgroudTitle"
        app:layout_constraintTop_toTopOf="@+id/imageBackgroudTitle"
        />
</android.support.constraint.ConstraintLayout>
