<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/textTitleSong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/imageArtworkSong"
        app:layout_constraintTop_toTopOf="@+id/imageArtworkSong"
        />
    <TextView
        android:id="@+id/textAuthorSong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@+id/textTitleSong"
        app:layout_constraintStart_toStartOf="@+id/textTitleSong"
        app:layout_constraintTop_toBottomOf="@+id/textTitleSong"
        />
    <ImageView
        android:id="@+id/imageArtworkSong"
        android:layout_width="@dimen/dp_50"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="@string/dimension_ratio_1_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</android.support.constraint.ConstraintLayout>
